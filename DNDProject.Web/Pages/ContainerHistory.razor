@page "/containers/{id:int}/history"
@inject HttpClient Http
@using System.Net.Http.Json

<h3>Historik for container @id</h3>

@if (rows is null)
{
    <p>Henter…</p>
}
else if (rows.Count == 0)
{
    <p>Ingen events.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Dato</th>
                <th>Fyld %</th>
                <th>Vægt (kg)</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var e in rows)
        {
            <tr>
                <td>@e.Timestamp.ToLocalTime().ToString("yyyy-MM-dd")</td>
                <td>@(e.FillPct?.ToString("0") ?? "-")</td>
                <td>@(e.WeightKg?.ToString("0") ?? "-")</td>
            </tr>
        }
        </tbody>
    </table>
}

@code {
    [Parameter] public int id { get; set; }
    List<EventDto>? rows;

    public record EventDto(int Id, DateTime Timestamp, double? FillPct, double? WeightKg);

    protected override async Task OnInitializedAsync()
        => rows = await Http.GetFromJsonAsync<List<EventDto>>($"api/containers/{id}/events") ?? new();
}
